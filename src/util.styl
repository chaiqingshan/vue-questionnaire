defaultColor = #f27045;
defaultTextColor = #555;
defalutBgColor = #efefef;
hoverBgColor = #fff1de;
myBtn(value)
	color #fff 
	background-color value 
	&:active 
		color darken(value,35%)
		background-color darken(value, 10%)
		box-shadow inset 0 1px 3px rgba(0,0,0,0.3)
	&:hover 
		background-color darken(value, 10%)
	&:focus
		background-color darken(value, 10%)